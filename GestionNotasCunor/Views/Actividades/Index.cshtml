@model IEnumerable<GestionNotasCunor.Models.actividad>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Actividad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Actividad
        </th>
        <th>
            Valor
        </th>
        <th>
            Fecha
        </th>
        <th>
            Curso
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom_actividad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.asign_curso.curso.nom_curso)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_actividad }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id_actividad }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.id_actividad })
        </td>
    </tr>
}

</table>
