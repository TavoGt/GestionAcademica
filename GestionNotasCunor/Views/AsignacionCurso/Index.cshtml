@model IEnumerable<GestionNotasCunor.Models.asign_curso>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nueva Asignación", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Carrera
        </th>
        <th>
            Catedrático
        </th>
        <th>
            Codigo
        </th>
        <th>
            Curso
        </th>
        <th>
            Sección
        </th>
        <th>
            Salón
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.carrera.nom_carrera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.catedratico.nombres)
            @Html.DisplayFor(modelItem => item.catedratico.apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.curso.cod_curso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.curso.nom_curso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.seccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salon)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_asign_curso }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.id_asign_curso }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.id_asign_curso })
        </td>
    </tr>
}

</table>
